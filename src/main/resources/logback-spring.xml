<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <contextName>logback</contextName>
 
    <property name="LOG_HOME" value="${catalina.base:-.}/manageable-kafka-consumer/logs"/>
    
    <logger name="org.apache.kafka.clients.consumer.ConsumerConfig" level="off"/>
    
    <appender name="KAFKA_CONSUMER_LOGGER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${catalina.base:-.}/manageable-kafka-consumer/logs/kafka-consumer-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>512MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>1</maxHistory>
        </rollingPolicy>
        <encoder charset="UTF-8"
            class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}][%p][%logger] %m%n
            </pattern>
        </encoder>
        <!-- 日志过滤-->
        <filter class="com.ovopark.smart.offset.commit.kafka.util.KafkaConsumerLogFilter">
            <threadName>main</threadName>
            <onMatch>TRUE</onMatch>
            <onMissMatch>FALSE</onMissMatch>
        </filter>
    </appender>
    
        <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
            <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
            <discardingThreshold>0</discardingThreshold>
            <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
            <queueSize>256</queueSize>
            <!-- 添加附加的appender,最多只能添加一个 -->
            <appender-ref ref="KAFKA_CONSUMER_LOGGER"/>
        </appender>
    
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>debug</level>
        </filter>
        <encoder>
            <pattern>[%thread] | %-5level %logger{36} | %msg%n
            </pattern>
        </encoder>
    </appender>
    
    <logger name="com.ovopark.dc" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="KAFKA_CONSUMER_LOGGER"/>
    </logger>
    
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="KAFKA_CONSUMER_LOGGER"/>
    </root>

</configuration>